    "Smart Home"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ioBroker/ioBroker.sonoff"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.4",
    "mqtt": "^5.3.0",
    "mqtt-connection": "^4.1.0",
    "aedes": "^0.51.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.7.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.0",
