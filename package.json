    "mocha": "^10.2.0",
    "typescript": "~5.6.0"
  },
  "bugs": {
    "url": "https://github.com/ioBroker/ioBroker.sonoff/issues"
  },
  "main": "build/main.js",
  "files": [
    "build/",
    "admin/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
