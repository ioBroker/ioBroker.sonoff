      "type": "number",
      "label": "Retransmit interval",
      "help": "Interval in milliseconds for message retransmission",
      "min": 100,
      "max": 99999,
      "xs": 12,
      "sm": 12,
      "md": 6,
      "lg": 4,
      "xl": 4
    },
    "retransmitCount": {
      "type": "number",
      "label": "Retransmit count",
      "help": "Maximum number of retransmission attempts",
      "min": 1,
      "max": 100,
      "xs": 12,
      "sm": 12,
      "md": 6,
      "lg": 4,
      "xl": 4
    }
